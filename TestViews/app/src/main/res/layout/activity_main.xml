    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus1.testviews.MainActivity">

  <com.example.asus1.testviews.CirclePercentView
      android:layout_width="200dp"
      android:layout_height="200dp"
      custom:CircleRadius = "100"
